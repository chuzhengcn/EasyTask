extends ../layout
append head
    script(src='/framework/kindeditor-4.1.3/kindeditor.js')
    script(src='/javascripts/todo/new.js')
block content
    .app-layout
        #main
            include ../include/app-sidebar
            #content
                .content-layout
                    .detail-wrapper
                        .detail
                            section
                                .action-bar.clearfix
                                    button.button-close-pane
                                .scrollable
                                    .inner
                    .list
                        .list-header.clearfix
                            header(data-id='#{task._id}', data-custom-id="#{task.custom_id}")
                                a.task-name(href='/tasks/#{task.custom_id}') #{task.custom_id} - #{task.name}
                            .back
                                a.btn.btn-small(href='/tasks/#{task.custom_id}') 
                                    i.icon-chevron-left
                                    |  任务主页
                                a.btn.btn-small(href='/tasks/#{task.custom_id}/todos') 
                                    i.icon-chevron-left
                                    |  文档列表
                            .operate-wrapper
                        .main-body.scrollable
                            .todo-new-wrapper.clearfix
                                form#create_task_todo_form.form-horizontal(action='/tasks/#{task._id}/todos')
                                    legend 添加文档
                                    .control-group
                                        label.control-label(for='name') 名称和类别
                                        .controls
                                            input.span6(type='text', autocomplete='off', name='name', required='true') 
                                            select#task_todo_category_selecter(name='category')
                                                include ../include/todo-category
                                    .control-group
                                        label.control-label(for='description') 描述
                                        .controls
                                            textarea#new_todo_des.span9(name='description', autocomplete='off', rows="15")
                                    .controls-group
                                        label.control-label(for='task_files') 附件
                                        .controls
                                            input#upload_todo_files_input(type='file', name='task_files',multiple="multiple")
                                    .control-group
                                        .controls
                                            button#create_task_todo_form_btn.btn.btn-primary 添 加