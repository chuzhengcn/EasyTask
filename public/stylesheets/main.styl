//-----------------------------header---------------------------------
#header
    position relative
    #logo
        height 48px
        line-height 48px
        padding 0 10px
        font-weight bold
        background-image linear-gradient(#383838,#313131)
        border-bottom 1px solid #010101
        box-shadow 0 0px 1px rgba(0, 0, 0, 0.66)
        a
            display block
            font-size 18px
            color #cdcdcd
            &:hover
                color #eee
    .search
        position absolute
        left 140px
        top 0
        span
            background url($icon-search-dark) 3px center no-repeat
            display inline-block
            width 35px
            height 48px
            cursor pointer
        form
            position absolute
            top 0
            left 40px
            z-index 1000
            height 48px
            background #383a3b
            padding-right 20px
            display none
        input
            width 300px
            height 16px
            margin-top 12px
            line-height 16px
    .user-avatar
        padding 0 10px
        height 48px
        border-bottom 1px solid rgba(0,0,0,0.18)
        a
            display block
            color rgba(255, 255, 255, 0.66)
        span
            float left
            line-height 48px
            padding 0 10px
        img
            vertical-align text-top
            float left
            margin-top 8px
            width 32px
            height 32px
            border-radius 3px
            box-shadow 0 1px 4px rgba(0, 0, 0, 0.45) inset, 0 1px 0 rgba(255, 255, 255, 0.33)
